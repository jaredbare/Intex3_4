@{
}
@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-2">
        <h3 class="bg-light">
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h3>
        <div class="card-text p-1">@Model.Author</div>
        <ul>
            @*<li>Author: @Model.Author</li>*@
            <li>Publisher: @Model.Publisher</li>
            <li>ISBN: @Model.Isbn</li>
            <li>Category: @Model.Category</li>
            <li>Page Count: @Model.PageCount pages</li>
            @*<li>Cost: $@Model.Price</li>*@
        </ul>
    </div>

</div>
<br />